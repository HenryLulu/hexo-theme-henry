a {
  color: inherit;
  text-decoration: none;
  &:link {
    text-decoration: none;
  }
}

ul {
  list-style: none;
  padding: 0;
}

p, h1, h2, h3, h4, h5, h6, ul
  padding: 0;
  margin: 0;

p
  line-height: 1.7;

h1, h2, h3, h4, h5, h6 {
  line-height: 1.2;
}

.h1,h1 {
  font-size: 32px
}

.h2,h2 {
  font-size: 24px
}

.h3,h3 {
  font-size: 19px
}

.h4,h4 {
  font-size: 16px
}

.h5,h5 {
  font-size: 13px
}

.h6,h6 {
  font-size: 11px
}

::-webkit-scrollbar {
    width: 10px;
    background-color: #ddd;
}

::-webkit-scrollbar-button {
    display: none;
}

::-webkit-scrollbar-thumb {
    background-color: #aaa;
}

::selection {
    background: color-gold;
    color: color-black;
    text-shadow: none;
}