.main
  display: flex;
  align-items: stretch;
  height: 100vh;

.body
  @media mq-mobile
    .menu, .article
      display: none;
    &.from-archives,
    &.from-home,
    &.from-tags
      .menu
        display: block;
        flex-grow: 1;
    &.from-post
      .article
        display: block;

.menu
  width: 33.33vw;
  position: relative;
  z-index: 10;
  flex-shrink: 0;
  flex-grow: 0;
  .header
    height: 20vh;
    width: 100%;
    background-size: cover;
    position: relative;
    background: color-black;
    @media mq-mobile
      display: none;
    .title
      color: color-gold;
      position: absolute;
      top: 50%;
      left: 20%;
      font-size: 30px;
      transform: translateY(-50%);
      text-decoration: underline;
      .number
        position: absolute;
        font-size: .5em;
        top: 0;
        right: -20px;

  .list
    width: 100%;
    height: 80vh;
    overflow-x: hidden;
    overflow-y: scroll;
    @media mq-mobile
      height: 100vh;
      box-sizing: border-box;
      border-top: 70px solid transparent;
    .item
      width: 100%;
      background-color: #f5f5f5;
      &.current
        background-color: color-background;
      a
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 15px 50px;
        height: 20vh;
        width: 100%;
        box-sizing: border-box;
        .item-info
          padding-bottom: .5em;
          color: #a6a6a6;
          font-size: 11px;
          letter-spacing: 2px;
        .item-title
          font-weight: 700;
          color: #252525;
          font-size: 16px;


.article
  flex-grow: 1;
  height: 100vh;
  overflow-x: hidden;
  overflow-y: scroll;
  box-sizing: border-box;
  padding: 200px 11vw 100px;
  .info
    font-size: 11px;
    letter-spacing: 2px;
    color: #a6a6a6;
  >.title
    font-size: 35px;
    color: color-black;
    margin-top: 50px;
  .summary
    font-weight: 700;
    font-size: 20px;
    margin: 40px 0 70px;
    color: #252525;
  .main-content
    h1, h2, h3, h4, h5, h6, p, ol, ul, blockquote, figure, >table
      margin-block-start: 1em;
      margin-block-end: 1em;
      margin-inline-start: 0px;
      margin-inline-end: 0px;
    >table, img, figure
      box-shadow: 1px 1px 10px 2px #ddd;
    h1, h2, h3, h4, h5, h6
      font-weight: bold;
    h1
      font-size: 42px;
    h2
      font-size: 27px;
    h3
      font-size: 22px;
    h4, h5, h6
      font-size: 18px;
    p
      font-size: 16px;
      display: block;
      line-height: 1.5;
    a
      color: color-gold;
    strong
      font-weight: 700;
    blockquote
      color: #999;
      padding-left: 20px;
      position: relative;
      border-left: 4px solid color-gold;
    img
      position relative
      z-index: 15;
      width: 100%;
      height: auto;
      display: block;
      margin: 30px 0;
    ol
      list-style: none;
      counter-reset: b;
      li
        margin-bottom: 10px;
        padding-left: 27px;
        position: relative;
        &:before
          content: counters(b,".") " ";
          counter-increment: b;
          left: -8px;
          color: #999;
          position: absolute;
          text-align: right;
          width: 29px;
    ul
      list-style: none;
      li
        margin-bottom: 10px;
        padding-left: 27px;
        position: relative;
        &:before
          content: "";
          background-color: #999;
          border-radius: 9999px;
          width: 6px;
          height: 6px;
          left: 12px;
          top: 11px;
          position: absolute;

    >table
      font-size: 16px;
      border-collapse: collapse;
      width: 100%;
      overflow-y: auto;
      background: color-background;
      position relative;
      z-index: 15;
      th, td
        text-align left;
        padding: 10px;
        border-bottom: 1px solid #f3f3f3;

    >figure
      position: relative;
      z-index: 15;
      margin: 0;
      background: #f3f3f3;
      table
        width: 100%;
        border-spacing: 0;
        table-layout: fixed;
      .code
        pre
          font-size: 14px;
          padding: 30px;
          code
            white-space: pre;
            font-size: 14px;
            padding: 0;
            font-weight: 300;
            -webkit-font-smoothing: initial;
            position: relative;
            background: transparent;

