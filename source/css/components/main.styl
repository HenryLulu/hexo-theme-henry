.main
  display: flex;
  align-items: stretch;
  height: 100vh;

.body
  @media mq-mobile
    .menu, .article
      display: none;
    &.from-archives,
    &.from-home,
    &.from-tags
      .menu
        display: block;
        flex-grow: 1;
    &.from-post
      .article
        display: block;

.menu
  width: 33.33vw;
  position: relative;
  z-index: 10;
  flex-shrink: 0;
  flex-grow: 0;
  .header
    height: 20vh;
    width: 100%;
    background-size: cover;
    position: relative;
    background: color-black;
    @media mq-mobile
      display: none;
    .title
      color: color-gold;
      position: absolute;
      top: 50%;
      left: 20%;
      font-size: 30px;
      transform: translateY(-50%);
      text-decoration: underline;
      .number
        position: absolute;
        font-size: .5em;
        top: 0;
        right: -20px;

  .list
    width: 100%;
    height: 80vh;
    overflow-x: hidden;
    overflow-y: scroll;
    @media mq-mobile
      height: 100vh;
      box-sizing: border-box;
      border-top: 70px solid transparent;
    .item
      width: 100%;
      background-color: #f5f5f5;
      &.current
        background-color: color-background;
      a
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 15px 50px;
        height: 20vh;
        width: 100%;
        box-sizing: border-box;
        .item-info
          padding-bottom: .5em;
          color: #a6a6a6;
          font-size: 11px;
          letter-spacing: 2px;
        .item-title
          font-weight: 700;
          color: #252525;
          font-size: 16px;


.article
  flex-grow: 1;
  height: 100vh;
  overflow-x: hidden;
  overflow-y: scroll;
  box-sizing: border-box;
  padding: 200px 11vw 100px;
  .info
    font-size: 11px;
    letter-spacing: 2px;
    color: #a6a6a6;
  .title
    font-size: 35px;
    color: color-black;
    margin-top: 50px;
  .summary
    font-weight: 700;
    font-size: 20px;
    margin: 40px 0 70px;
    color: #252525;
  .main-content
    h1, h2, h3, h4, h5, h6
      margin-block-start: 1em;
      margin-block-end: 1em;
      margin-inline-start: 0px;
      margin-inline-end: 0px;
      font-weight: bold;
    p
      font-size: 16px;
      display: block;
      margin-block-start: 1em;
      margin-block-end: 1em;
      margin-inline-start: 0px;
      margin-inline-end: 0px;
    img
      position relative
      z-index: 15;
      width: 100%;
      height: auto;
      display: block;
      margin: 30px 0;
    ul
      display: block;
      margin-block-start: 1em;
      margin-block-end: 1em;
      margin-inline-start: 0px;
      margin-inline-end: 0px;
      padding-inline-start: 40px;
      list-style: none;
      margin-top: 30px;
      padding-left: 0;
      li
        margin: 5px 0;
        padding-left: 20px;
        position: relative;
        font-size: 16px;
        list-style: none;
        line-height: 1.7;
        &:before
          height: 2px;
          content: "";
          position: absolute;
          left: 0;
          top: 10px;
          width: 6px;
          background-color: #617294;
    table
      position: relative;
      z-index: 15;
      background: #fff;
      overflow: scroll;
      border: 1px solid color-gray;
      border-collapse:collapse;
      th, td
        text-align left;
        border: 1px solid color-gray;
        padding: 5px;




